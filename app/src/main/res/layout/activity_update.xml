<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/update_activity_shape"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_title_activity_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_activity_update"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_body_activity_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title_activity_update"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_1_activity_update"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_below="@id/tv_body_activity_update"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_local_version_activity_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_body_activity_update"
        android:layout_toLeftOf="@id/tv_1_activity_update"
        android:paddingTop="15dp"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_server_version_activity_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_body_activity_update"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/tv_1_activity_update"
        android:paddingTop="15dp"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_server_version_activity_update"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_cancel_activity_update"
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            android:layout_height="wrap_content"
            android:text="@string/cancel_activity_update"
            android:textSize="11sp" />

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/tv_download_activity_update"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/download_activity_update"
            android:textSize="11sp" />

        <TextView
            android:paddingLeft="10dp"
            android:textColor="@color/grey_blue"
            android:id="@+id/tv_cool_download_activity_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cool_download_activity_update"
            android:textSize="11sp" />
    </LinearLayout>
</RelativeLayout>
